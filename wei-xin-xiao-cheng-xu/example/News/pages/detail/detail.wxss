/* pages/detail/detail.wxss */
@import "/wxParse/wxParse.wxss";
.commentBar{
  position: fixed;
  bottom: 0;
  z-index: 1;
  width: 100%;
  height: 40px;
  border-top: 1px solid #f0f0f0;
  background: #fff;
}
.content{
  padding: 8px;
}
.title{
  font-size: 24px;
}
.date{
  color: #aeaeae;
}
.reading{
  float: right;
  color: #aeaeae;
}
.htmlContent{
  margin-top: 10px;
}

.commentInput{
  float: left;
  width: 80%;
  height: 30px;
  margin: 5px;
  border:1px solid #aaa;
  border-radius: 20px;
  font-size: 14px;
  padding-left: 5px;
}
.commentBtn{
  width: 15%;
  text-align: center;
  line-height: 40px;
  color: #aaa;
  display: inline-block;
}
.comments{
  border-top:1px solid #bbb;
  margin-bottom: 50px;
}
.commentList{
  margin-bottom: 50px;
}
.comment{
  border-bottom: 1px solid #cacaca;
  min-height: 80px;
  padding:5px;
  display: flex;
}
.avater{
  flex: 1;
}
.avater image{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.userInfo{
  flex: 5;
}
.username{
  font-size: 20px;
  color: #333;
}
.time{
  font-size: 14px;
  color: #bbb;
  float: right;
}
.noComment{
  color: #aaa;
  text-align: center;
  margin:5px;
  padding-bottom: 50px;
}
.commentContent{
  font-size: 16px;
}